{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aurora Heart",
  "version": "0.1.0",
  "identifier": "com.auroraheart.ide",
  "build": {
    "beforeDevCommand": "cd src-ui && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd src-ui && npm run build",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "Aurora Heart - Glassmorphism IDE",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false
  }
}
